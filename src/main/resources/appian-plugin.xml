<appian-plugin name="Azure File Share (Large File Streaming)" key="org.appian.community.azurestreamer">
    <plugin-info>
        <description>Uploads large files to Azure File Share using chunked streaming to bypass the 4MB REST API limit.</description>
        <vendor name="Appian Community" url="https://community.appian.com" />
        <version>1.1.0</version>
        <application-version min="24.4" />
    </plugin-info>

    <smart-service name="Azure File Share Streamer"
                   key="AzureLargeFileUploader"
                   class="org.appian.community.azurefileshare.AzureLargeFileUploader">
        <i18n-bundle>org.appian.community.azurestreamer.AzureLargeFileUploader</i18n-bundle>
    </smart-service>
</appian-plugin>